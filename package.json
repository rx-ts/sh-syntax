{
  "name": "sh-syntax",
  "version": "0.3.2",
  "type": "module",
  "description": "A WASM shell parser and formatter with bash support, based on mvdan/sh",
  "repository": "git+https://github.com/rx-ts/sh-syntax.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">=v12.20"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs",
      "browser": "./lib/browser.js"
    },
    "./main.wasm": "./main.wasm",
    "./package.json": "./package.json",
    "./vendors/wasm_exec": "./vendors/wasm_exec.js",
    "./vendors/wasm_exec.js": "./vendors/wasm_exec.js"
  },
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "main.wasm",
    "vendors",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "benchmark": "node benchmark > benchmark/benchmark.txt",
    "build": "run-p build:*",
    "build:r": "r -f cjs",
    "build:ts": "tsc -p src",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly --max-warnings 10",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "prerelease": "pnpm build",
    "release": "changeset publish",
    "test": "vitest run --coverage",
    "typecov": "type-coverage",
    "wasm": "tinygo build -o main.wasm -target wasm --no-debug"
  },
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@1stg/lib-config": "^6.2.3",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0",
    "@types/golang-wasm-exec": "^1.15.0",
    "@types/mvdan-sh": "^0.5.1",
    "@types/node": "^18.0.0",
    "@types/web": "^0.0.68",
    "c8": "^7.11.3",
    "mvdan-sh": "^0.10.1",
    "tinybench": "^1.0.2",
    "type-coverage": "^2.21.1",
    "typescript": "^4.7.4",
    "vitest": "^0.15.2"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
